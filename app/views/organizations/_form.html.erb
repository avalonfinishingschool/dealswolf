<% if !@organization.blank? %>
  <div id="orgModal" class="modal fade <%= 'open'.html_safe if @modal %>">

    <div class="modal-dialog">

      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Organization</h4>
        </div>

        <div class="modal-body">

          <%= simple_form_for([@organization.team, @organization], html: { class: "form-horizontal form-groups-bordered"}, defaults: { required: false, label_html: { class: 'control-label' }}) do |f| %>
          
            <%= f.error_notification %>

            <div class="row">
              <div class="col-md-offset-2 col-md-8">
                <%= f.input :name %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-offset-2 col-md-8">
                <%= f.input :address %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-offset-2 col-md-8">
                <%= f.input :phone %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-offset-2 col-md-8">
                <%= f.input :visibility_id, collection: Visibility.all,:include_blank => false %>
              </div>
            </div>
        </div>
        <div class="modal-footer">
          <div class="form-actions">
            <%= f.button :submit, class:"btn btn-primary", remote: true, method: :post %>
          </div>
        </div>
      <% end %>
        
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<% end %>