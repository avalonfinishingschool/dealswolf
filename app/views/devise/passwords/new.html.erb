<div class="row">

  <div class="col-md-4 col-md-offset-4">
<%=link_to(image_tag("logo_alt_alt.png",class: "logo-centered"), root_path) %>
    <div class="panel panel-default sign">
   
      <h2 class="sign-title">Forgot your password?</h2>
      <h3 class="sign-title-h3">Reset it. Then get to work.</h3>

            <div class="panel-body">


<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true, placeholder: "Email", label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", class: "cta2 fw" %>
  </div>
<% end %>


<div class="shared_links_cta">
<%= render "devise/shared/links" %>
</div>
            </div>
          </div>
        </div>

      </div>