<div class="sidebar-menu">
  <header class="logo-env">

    <div class="logo">
      <%= link_to image_tag("logo-small.png", class: "logo-image"), teams_path %>
    </div>

    <!-- logo collapse icon -->
    <div class="sidebar-collapse">
      <a href="#" class="sidebar-collapse-icon with-animation"><!-- add class "with-animation" if you want sidebar to have animation during expanding/collapsing transition -->
        <i class="entypo-menu"></i>
      </a>
    </div>

    <!-- open/close menu icon (do not remove if you want to enable menu on mobile devices) -->
    <div class="sidebar-mobile-menu visible-xs">
      <a href="#" class="with-animation"><!-- add class "with-animation" to support animation -->
        <i class="entypo-menu"></i>
      </a>
    </div>

  </header>

  <ul id="main-menu">

    <%if @team %>
    <li>
      <%= link_to (raw('<i class="entypo-gauge"></i><span>Dashboard</span>')), team_deals_url(@team) %>
    </li>

    <li>
      <%= link_to (raw('<i class="entypo-layout"></i><span>Activities</span>')), team_activities_url(@team) %>
    </li>

    <li>
      <a><i class="entypo-doc-text"></i><span>Contacts</span></a>
      <ul>
        <li>
          <%= link_to (raw('<i class="entypo-suitcase"></i><span>People</span>')), team_people_url(@team) %>
        </li>
        <li>
          <%= link_to (raw('<i class="entypo-network"></i><span>Organizations</span>')), team_organizations_url(@team) %>
        </li>
      </ul>
    </li>

    <li>
      <a><i class="entypo-flow-tree"></i><span>Management</span></a>
      <ul>
        <li>
          <%= link_to (raw('<i class="entypo-chart-bar"></i><span>Statistics</span>')), stats_team_url(@team) %>
        </li>
        <li>
          <%= link_to (raw('<i class="entypo-users"></i><span>Members</span>')), invite_team_url(@team) %>
        </li>

        <%if current_user == @team.creator %>
          <li>
            <%= link_to (raw('<i class="entypo-export"></i><span>Export</span>')), export_team_url(@team) %>
          </li>

          <li>
            <%= link_to (raw('<i class="entypo-trophy"></i><span>Edit Stages</span>')), stages_team_url(@team) %>
          </li>

          <li>
            <%= link_to (raw('<i class="entypo-eye"></i><span>Eagle View</span>')), eagleview_team_url(@team) %>
          </li>
        <% end %>
      </ul>
    </li>

  <% end %>

    <li>
      <a><i class="entypo-window"></i><span>Settings</span></a>
      <ul>
        <li>
          <%= link_to (raw('<i class="entypo-lock"></i><span>Personal Settings</span>')), edit_user_registration_url %>
        </li>
        <%if @team && current_user == @team.creator %>
          <li>
            <%= link_to (raw('<i class="entypo-tools"></i><span>Team Settings</span>')), settings_team_url(@team) %>
          </li>
        <%end %>
      </ul>
    </li>


    <li>
      <%= link_to (raw('<i class="entypo-star"></i><span>My Teams</span>')), teams_url %>
    </li>

  </ul>

</div>
