<div class="panel panel-info" style="padding:0;">

	<div class="panel-heading">
		<div class="panel-title">
			Teams I Own
		</div>
	</div>
	<div class="panel-body">
		<br/>
			<%unless current_user.owned_team %>

				<p class="text-center"> You don't have a team yet. Create one? </p>
				<br/>
				<br/>
				<%= link_to 'Create your own Team', new_team_path, class:'btn btn-lg btn-info btn-block' %>
			<% else %>
				<%= link_to current_user.owned_team.name, team_deals_path(current_user.owned_team) , class:'btn btn-lg btn-info btn-block'%>
			<% end %>

	</div>
<!-- some stripe crap came here -->
</div>

<div class="panel panel-info" style="padding:0;">

	<div class="panel-heading">
		<div class="panel-title">
			Teams I Belong To
		</div>
	</div>

	<div class="panel-body">
		<p>
			<%if current_user.teams.count > 0 %>
				<%current_user.teams.uniq.each do |t|%>
					<%= link_to t.name, team_deals_path(t), class:'btn btn-info btn-block' %>
				<%end%>
			<%else%>
				<p class="text-center">You don't belong to any teams.</p>
			<%end%>
		</p>
	</div>

</div>

<div class="clearfix"></div>
